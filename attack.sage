def recover_r_kangaroo(g, a, p, bits=40):
    g = Mod(g, p)
    a = Mod(a, p)

    r = discrete_log(
        a,
        g,
        bounds=(0, Integer(2)^bits),
        operation='*',
        algorithm='lambda'
    )
    return Integer(r)

def recover_x(g, h, p, c, t, r):
    """
    Solve t = r + c*x mod (p-1)
    """
    order = p - 1
    d = gcd(c, order)

    if (t - r) % d != 0:
        raise ValueError("No solution for x")

    c_ = c // d
    rhs_ = (t - r) // d
    order_ = order // d

    x0 = (rhs_ * inverse_mod(c_, order_)) % order_

    for k in range(d):
        x = (x0 + k * order_) % order
        if power_mod(g, x, p) == h:
            return Integer(x)

    raise ValueError("x not found")

